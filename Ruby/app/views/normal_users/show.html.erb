<div class="bg-cliente">
  <button id="openbtn" class="openbtn" onclick="openNav()">&#9776;</button>

  <h5 class="nome-user">
    <%= @normal_user.name %>
  </h5>

  <!-- SIDEBAR -->
  <nav id="mySidebar" class="sidebar">
    <div class="sidebar-header">
      <a href="javascript:void(0)" class="closebtn sidebar-header" onclick="closeNav()">&times;</a>
      <%= @normal_user.name %>
      <hr>
    </div>
    <div class="sidebar-links">
      <%= link_to "Conta", edit_normal_user_path, id: 'Conta' %>
      <%= link_to "Suporte", "#signup", 'data-target' => "#modal-mensagem", 'data-toggle' => "modal", name: 'Suporte'%>
      <%= link_to 'Sair', saircliente_path, method: :delete, id: 'Show'%>
    </div>
  </nav>
  <!-- FINAL DA SIDEBAR -->
    <div class="div-profile center" id="picture">
      <% if @normal_user.avatar.attached? %>
        <%= image_tag @normal_user.avatar,
          :alt => "profile picture",
          class: "img-profile" %>
      <% else %>
          <%= image_tag 'no_avatar.jpg',
          :alt => "No profile picture",
          class: "img-profile" %>
      <% end %>
    </div>
</div>

<div id="conteudo" class="main">
  <div class="container">
    <div class="right">
      <%= link_to fa_icon('envelope'), mensagens_path, id: "mensagem" %>
      <%= link_to fa_icon('star'), temp_path, id:"avaliacao" %>
    </div>

    <br><br><br><br><br>

    <div class="center">
      <h4 class="buscar">BUSCAR SERVIÇOS POR:</h4><br>

      <%= link_to "Profissional", busca_profissional_path, class: "btn btn-filtro", id: "busca-profissional" %>
      <%= link_to "Serviço", busca_servico_nome_path, class: "btn btn-filtro", id: "busca-servico-nome" %>
      <%= link_to "Localidade", busca_endereco_nome_path, class: "btn btn-filtro", id: "busca-servico-cidade" %>
      <%= link_to "Especialidade", busca_profissional_profissao_path, class: "btn btn-filtro", id: "busca-profissional-profissao" %>
    </div>

    <br>

    <div class="row container">
      <%= link_to temp_path, class: "col-sm-6", id: "atendimento_marcado" do %>
        <div class="card-atendimento">
          <h5>ATENDIMENTOS MARCADOS</h5>
        </div>
      <% end %>

      <%= link_to temp_path, class: "col-sm-6", id: "historico_atendimento" do %>
        <div class="card-atendimento">
          <h5>HISTÓRICO DE ATENDIMENTOS</h5>
        </div>
      <% end %>
    <!-- Final do modal -->
    </div><!-- Row -->
  </div> <!-- Container -->
</div>
