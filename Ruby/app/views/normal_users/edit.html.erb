<div class="col-md-6 col-md-offset-3 col-xs-12 container">
  <h1>Alterar conta</h1>
  <%= form_with(model: @normal_user, local: true) do |form| %>
    <%= render 'form', normal_user: @current_normal_user, form: form %>


    <div class="actions">
      <div class="center">
        <%= form.submit 'Salvar', class: 'btn btn-verde', name: 'Salvar' %>
      </div>

      <div class="center">
        <%= link_to 'Voltar', @normal_user, class: 'btn btn-cinza' %>
      </div>
    </div>
  <% end %>
</div>