<% if professional_user.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <h3>Ops! Encontramos <%= pluralize(professional_user.errors.count, 'erro', 'erros') %> </h3>


      <% professional_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: 'form-control', id: 'profissional_name', placeholder: 'Nome completo' %>
</div>

<div class="form-group">
  <%= form.label :email %>
  <%= form.text_field :email, class: 'form-control', id: 'profissional_email', placeholder: 'Email'%>
</div>

<div class="form-group">
  <%= form.label :phone %>
  <%= form.text_field :phone, class: 'form-control', id: 'profissional_phone', placeholder: 'Número telefone'%>
</div>

<div class="form-group">
  <%= form.label :profession %>
  <%= form.select :profession, [["Nutricionista", "nutricionista"], ["Nutrólogo", "nutrólogo"], ["Professor de Esportes", "professor de esportes"], ["Prof. de Educação Física", "profissional de educação física"]], {}, {class: 'form-control'} %>
</div>

<div class="form-group">
  <%= form.label :document %>
  <%= form.text_field :document, class: 'form-control', id: 'profissional_document', placeholder: 'Número documento'  %>
</div>

<div class="form-group">
  <%= form.label :description %>
  <%= form.text_area :description, class: 'form-control', id: 'profissional_description', placeholder: 'Descrição' %>
</div>

<div class="form-group">
  <%= form.label :facebook %>
  <%= form.text_field :facebook, class: 'form-control', id: 'profissional_facebook', placeholder:"URL: http://www.facebok.com/Maria.Silva" %>
</div>

<div class="form-group">
  <%= form.label :instagram %>
  <%= form.text_field :instagram, class: 'form-control', id: 'profissional_instagram', placeholder:'Nome do usuário' %>
</div>

<div class="form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: 'form-control', id: 'profissional_password', placeholder:"Senha"  %>
</div>

<div class="form-group">
  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation, class: 'form-control', id: 'profissional_passwordc', placeholder:"Senha" %>
</div>

<div class="form-group">
  <%= form.label :avatar %>
  <%= form.file_field :avatar, class: 'form-control' %>
</div>